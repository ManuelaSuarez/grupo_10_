<!DOCTYPE html>
<html lang="es">

<%-include('../partials/head', {styles: ["login-register"]}) %>

<body>
  <%-include('../partials/header') %>
  <main>
    <div class="panel">
      <h2>Panel de cuenta</h2>
    </div>
    <section class="formularios">
      <form action="/" method="GET">
        <h3>Ingresar</h3>
        <div>
          <input placeholder="Correo electrónico" type="email" name="email" id="email">
        </div>
        <div>
          <input placeholder="Contraseña" type="password" name="password" id="password">
        </div>
        <div>
          <button>Ingresar con Google</button>
          <button type="submit">Iniciar Sesión</button>
        </div>
        <div class="olvidaste">
        <a href="#">¿Olvidaste tu contraseña?</a>
      </div>
<br>
<br>
      </form>
      <form action="/" method="GET">
        <div>
        <h3>Registrate</h3>
      </div>
        <div>
          <input placeholder="Nombre" type="text">
        </div>
        <div>
          <input placeholder="Apellido" type="text">
        </div>
        <div>
          <input placeholder="Correo electrónico" type="email">
        </div>
        <div>
          <input placeholder="Contraseña" type="password">
        </div>
        <div>
          <input placeholder="Confirmar contraseña" type="password">
        </div>
        <div>
          <button>Registrarse con Google</button>
          <button type="submit">Registrarse</button>
        </div>
      </form>
    </section>
  </main>
  <%-include('../partials/footer') %>
</body>

</html>